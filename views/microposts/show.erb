<div class="single micropost">
	<h2><%= @micropost.title %></h2>
	<h4>By <a href="/authors/<%= @micropost.author.id %>"><%= @micropost.author.name %></a></h4>
	<img src="<%= @micropost.img_url %>" alt="" width=400>
	<p>Created on: <%= @micropost.date_created %></p>
	

<% @micropost.tags.each do |tag| %>

    <form action="/tags/<%= tag.id %>" method="GET">
		<input type="submit" value="<%= tag.name %>">
				</form>  
<% end %>	  
</div>
<br><a href="/microposts/<%= @micropost.id %>/edit">Edit Micropost</a>


